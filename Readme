BEGIN
  DBMS_NETWORK_ACL_ADMIN.CREATE_ACL (
    acl         => 'my_acl.xml',
    description => 'My ACL',
    principal   => 'my_user',
    is_grant    => TRUE,
    privilege   => 'connect');
END;
/

COMMIT;


BEGIN
  DBMS_NETWORK_ACL_ADMIN.ADD_PRIVILEGE (
    acl         => 'my_acl.xml',
    principal   => 'my_user',
    is_grant    => TRUE,
    privilege   => 'connect',
    start_date  => NULL,
    end_date    => NULL,
    network_mask=> '192.168.1.100');
END;
/

COMMIT;

BEGIN
  DBMS_NETWORK_ACL_ADMIN.ASSIGN_ACL (
    acl         => 'my_acl.xml',
    host        => '*');
END;
/

COMMIT;
